<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="tafDialog">
        <attr name="tafDialog_dialogStyle" format="reference" />
        <attr name="tafDialog_titleTextStyle" format="reference" />
        <attr name="tafDialog_messageTextStyle" format="reference" />

        <attr name="tafDialog_background" format="reference" />
        <attr name="tafDialog_titleTextColor" format="color|reference" />
        <attr name="tafDialog_titleBackgroundColor" format="color|reference" />
        <attr name="tafDialog_titleDividerColor" format="color|reference" />
        <attr name="tafDialog_contentBackroundColor" format="color|reference" />
        <attr name="tafDialog_messageTextColor" format="color|reference" />
        <attr name="tafDialog_messageTextSize" format="dimension|reference" />
        <attr name="tafDialog_buttonTextColor" format="color|reference" />
        <attr name="tafDialog_buttonPanelBackgroundColor" format="color|reference" />
        <attr name="tafDialog_buttonPanelDividerColor" format="color|reference" />
        <attr name="tafDialog_buttonDividerColor" format="color|reference" />
        <attr name="tafDialog_buttonBackgroundColorNormal" format="color|reference" />
        <attr name="tafDialog_buttonBackgroundColorPressed" format="color|reference" />
        <attr name="tafDialog_buttonBackgroundColorFocused" format="color|reference" />

    </declare-styleable>


    <declare-styleable name="ShadowWrapper">
        <attr name="android:color" />
        <attr name="taf_shape">
            <flag name="rect" value="0x0" />
            <flag name="oval" value="0x1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="StartButtonView">
        <!-- values : power , play -->
        <attr name="type" format="integer"></attr>
    </declare-styleable>


    <declare-styleable name="SeekBarPreference">
        <attr name="seekBarPref_style" format="integer|reference" />
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="defaultValue" format="integer" />
        <attr name="seekBarPref_textColor" format="color|reference"  />
    </declare-styleable>

    <declare-styleable name="CenteredIconButton">
        <attr name="android:drawable" />
        <attr name="android:background"  />
        <attr name="android:textSize" />
        <attr name="android:textColor"/>
        <attr name="android:text"/>
    </declare-styleable>


</resources>